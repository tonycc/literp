  updatedBy    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  order        SubcontractOrder @relation(fields: [orderId], references: [id], onDelete: Cascade)
  items        SubcontractReceiptItem[]

  @@index([orderId])
  @@index([receivedDate])
  @@index([status])
  @@map("subcontract_receipts")
